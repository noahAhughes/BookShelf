<div data-options="dxView : { name: 'TagList', title: 'Categories' } " >
    <div data-bind="dxCommand: { id: 'addTag', onExecute: function() { this.addTag(); }, icon: 'plus' }"></div>
    <div data-options="dxContent : { targetPlaceholder: 'content' } " >
        <div class="tags-list" data-bind="dxList: { dataSource: source, onItemDeleting: deleteTagConfirmation, onItemDeleted: deleteTag, allowItemDeleting: true, onItemClick: openTag }">
            <div data-options="dxTemplate: { name: 'item' }">
                <div class=" tag-title" data-bind="text: title"></div>
            </div>
        </div>
    </div>
</div>